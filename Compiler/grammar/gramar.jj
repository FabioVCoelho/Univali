SKIP:
{
    "//" : comentarioemlinha
    | " " | "\t" | "\n" | "\r" | "\f" |
    "/*" : multilinecomment
}

<comentarioemlinha> SKIP :
{
      <["\n","\r"]> : DEFAULT
    | <~[]>
}

<multilinecomment> SKIP :
{
      "*/" : DEFAULT
    | <~[]>
}


TOKEN: {
          <PALAVRARESERVADA: ("carry"|"this"|"out"|"check"|"result"|"put"|"show"|"acquire"|"assign"
        |"declare"|"as"|"constant"|"variable"|"program"|"execute"|"purpose") >
        | <ARITMETICA: ("+" | "-" | "*" | "/" | "**" | "%" | "%%")>
        | <RELACIONAL: ("==" | "!=" | "<<" | ">>" | "<<=" | ">>=")>
        | <LOGICA: ("&" | "|" | "!")>
        | <INTEGER: (<DIGITO>)+ >
        | <REAL: (<DIGITO>)+"."(<DIGITO>)+>
        | <STRING: "\""(~["\"","\n","\r"])*"\"">
        | <BOOLEAN: ("true" | "false")>
        | <TIPO: ("integer"|"real"|"string"|"boolean")>
        | <DIGITO: ["0"-"9"]>
        }

TOKEN: {
        <SIMBOLOSESPECIAIS: ("("|")"|"{"|"}"|"["|"]"|";"|","|".") >
}

